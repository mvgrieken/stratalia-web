{
  "functions": {
    "src/pages/api/**/*.ts|js": {
      "runtime": "nodejs18.x",
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ],
  "crons": [
    {
      "path": "/api/cron/daily-word",
      "schedule": "0 6 * * *"
    }
  ]
}