{
  "version": 2,
  "functions": {
    "src/pages/api/**/*.ts": {
      "memory": 512,
      "maxDuration": 10
    },
    "src/pages/api/**/*.js": {
      "memory": 512,
      "maxDuration": 10
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Cache-Control": "no-cache"
      }
    }
  ]
}