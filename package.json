{
  "name": "stratalia",
  "version": "1.0.0",
  "private": true,
  "description": "Stratalia - straattaal vertaalapp voor ouders van tieners",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "lint:fix-logger": "eslint --ext .ts,.tsx src --fix",
    "codemod:fix-logging": "node scripts/codemods/fix-logging.js",
    "fix:logging": "npm run codemod:fix-logging && npm run lint:fix-logger",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:unit": "vitest run --coverage",
    "test:smoke": "vitest run src/__tests__/api-content.filters.test.ts src/__tests__/knowledge-filters.client.test.tsx src/__tests__/quiz.smoke.test.ts src/__tests__/leaderboard.smoke.test.ts src/__tests__/quiz-submit.smoke.test.ts src/__tests__/health.smoke.test.ts",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test --reporter=dot",
    "clean": "rm -rf .next dist",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "npm run analyze"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.2",
    "next": "15.0.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tailwindcss": "^3.3.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.5.3",
    "@playwright/test": "^1.55.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.52.0",
    "eslint-config-next": "15.0.0",
    "postcss": "^8.4.31",
    "typescript": "^5.2.2",
    "vitest": "^0.34.6"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}
